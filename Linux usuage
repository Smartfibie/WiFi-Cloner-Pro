# Update package list
sudo apt update

# Install Aircrack-ng
sudo apt install aircrack-ng

# Install Python 3 if not installed
sudo apt install python3 python3-pip

# Install Python dependencies
pip3 install pyqt5

# clone repositories
git clone https://github.com/Smartfibie/WiFi-Cloner-Pro.git

#make dir
cd WiFi-Cloner-Pro

# Before using GUI, you must run Aircrack-ng manually to collect scan data.
sudo airodump-ng --write /tmp/scan --write-interval 1 --output-format csv wlan0

# From project root folder
python3 gui/main_window.py

